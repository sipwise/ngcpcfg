[%
  # Return array of all IPv4 addresses configured on all NGCP 
  # cluster nodes
  #
  # This template takes no parameters
  #
  # @return out     The array of ips

  out = [];
  FOREACH host IN hosts.keys;
    FOREACH interface IN hosts.$host.interfaces;
      IF hosts.$host.$interface.ip;
        out.push(hosts.$host.$interface.ip);
      END;
      FOREACH ip IN hosts.$host.$interface.shared_ip;
        IF ip;
          out.push(ip);
        END;
      END;
    END;
  END;
  out = out.unique;
-%]
